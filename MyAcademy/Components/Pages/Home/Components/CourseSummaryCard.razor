@using MyAcademy.Services

<div class="card shadow-sm border-0 rounded-lg">
    <img src="https://fakeimg.pl/400x200" class="card-img-top" alt="Course Image">

    <div class="card-body d-flex flex-column">
        <h5 class="card-title fw-bold">@Course.Title</h5>
        <p class="card-subtitle text-muted mb-2">By <span class="fw-semibold">@Course.Author</span></p>

        <p class="card-text text-muted text-truncate">@Course.Description</p>

        <div class="d-flex justify-content-between align-items-center">
            <span class="badge bg-secondary">⏳ @Course.Duration min</span>
            <span class="fw-bold text-success">@($"{Course.Price:C}")</span>
        </div>

        <div class="d-flex justify-content-between mt-3">
            <button class="btn btn-outline-danger">
                ❤️ Add to Favorites
            </button>
            <button class="btn btn-outline-primary">
                🛒 Add to Cart
            </button>
        </div>

        <a href="/course/@Course.Id" class="btn btn-primary mt-3">📖 Open Course</a>
    </div>
</div>

@code {
    [Parameter]
    public Course Course { get; set; }
}