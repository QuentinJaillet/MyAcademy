    <p>Categories</p>
    @foreach (var category in CategoriesSelected)
    {
        <div class="form-check">
            <input class="form-check-input" checked="@category.Value" type="checkbox" value=""
                   id="cat-@category.Key.Name.ToLower()" @oninput="CheckboxChanged"/>
            <label class="form-check-label" for="cat-@category.Key.Name.ToLower()">
                @category.Key.Name
            </label>
        </div>
    }
    <br/>
    <p>Langues</p>
    <p>toto</p>
</div>
